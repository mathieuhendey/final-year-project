<div class="list-group-item flex-column align-items-start col-5" id="tweet" data-id="{{ tweet.id }}">
    <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">
            @{{ tweet.authorScreenName }}
        </h5>
        <small>{{ tweet.createdOn|time_diff }}</small>
    </div>
    <p class="mb-1">
        {{ tweet.text }}
    </p>
</div>